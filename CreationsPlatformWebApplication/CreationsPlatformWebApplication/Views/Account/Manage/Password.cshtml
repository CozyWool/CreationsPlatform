@{
    Layout = "Manage/_ManageNav";
}
@model PasswordModel

<partial name="_StatusMessage" for="StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Password" asp-controller="Account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-2">
                <input type="password" class="form-control" autocomplete="password" asp-for="CurrentPassword">
                <label asp-for="CurrentPassword">@Html.DisplayNameFor(m => m.CurrentPassword)</label>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input type="password" class="form-control" autocomplete="password" asp-for="NewPassword">
                <label asp-for="NewPassword">@Html.DisplayNameFor(m => m.NewPassword)</label>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input type="password" class="form-control" asp-for="ConfirmPassword">
                <label asp-for="ConfirmPassword">@Html.DisplayNameFor(m => m.ConfirmPassword)</label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Сохранить</button>
        </form>
    </div>
</div>